# switch layout to stack
alt - s : yabai -m space --layout stack
# switch layout to bsp
alt - e : yabai -m space --layout bsp

# change window focus within space (works for both bsp and stack layouts)
alt - j : yabai -m window --focus south || yabai -m window --focus stack.next
alt - k : yabai -m window --focus north || yabai -m window --focus stack.prev
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# Monitor switching (alt + cmd)
alt + cmd - j : yabai -m config mouse_follows_focus on; yabai -m display --focus south; yabai -m config mouse_follows_focus off
alt + cmd - k : yabai -m config mouse_follows_focus on; yabai -m display --focus north; yabai -m config mouse_follows_focus off
alt + cmd - h : yabai -m config mouse_follows_focus on; yabai -m display --focus west; yabai -m config mouse_follows_focus off
alt + cmd - j : yabai -m config mouse_follows_focus on; yabai -m display --focus east; yabai -m config mouse_follows_focus off
alt + cmd - p : yabai -m display --focus prev
alt + cmd - n : yabai -m display --focus next

# Modify the layout
# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270
# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis
# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis
# toggle window float
alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# Modify window size
# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen
# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# Moving windows around

# swap windows and change stack order
shift + alt - j : yabai -m window --swap south || yabai -m window --swap stack.next
shift + alt - k : yabai -m window --swap north || yabai -m window --swap stack.prev
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# move window and split
# ctrl + alt - j : yabai -m window --warp south
# ctrl + alt - k : yabai -m window --warp north
# ctrl + alt - h : yabai -m window --warp west
# ctrl + alt - l : yabai -m window --warp east

# move window to display left and right
shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt - g : yabai -m window --display east; yabai -m display --focus east;

#move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# move window to space
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;

# Manage Spaces - using native macOS workspace switching
alt - 1 : osascript -e 'tell application "System Events" to key code 18 using control down'
alt - 2 : osascript -e 'tell application "System Events" to key code 19 using control down'
alt - 3 : osascript -e 'tell application "System Events" to key code 20 using control down'
alt - 4 : osascript -e 'tell application "System Events" to key code 21 using control down'
alt - 5 : osascript -e 'tell application "System Events" to key code 23 using control down'
alt - 6 : osascript -e 'tell application "System Events" to key code 22 using control down'
alt - 7 : osascript -e 'tell application "System Events" to key code 26 using control down'
alt - 8 : osascript -e 'tell application "System Events" to key code 28 using control down'
alt - 9 : osascript -e 'tell application "System Events" to key code 25 using control down'
alt - 0 : osascript -e 'tell application "System Events" to key code 29 using control down'


# Switch space - using native macOS workspace switching
ctrl + alt - l : osascript -e 'tell application "System Events" to key code 124 using control down'
ctrl + alt - h : osascript -e 'tell application "System Events" to key code 123 using control down'

# Clean up empty spaces and reorder
ctrl + alt - c : ~/.config/skhd/scripts/cleanup-spaces.sh

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service

# Open applications
alt - t : open -na "kitty"
alt - w : open -na "Brave Browser.app"

# Close window
alt - q : yabai -m window --close
